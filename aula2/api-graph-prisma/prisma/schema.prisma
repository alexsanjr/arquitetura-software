generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Ator {
  id                Int     @id @default(autoincrement())
  nome              String  @unique
  dataDeNascimento  Int
  nacionalidade     String
  filmes            Filme[]
}

model Filme {
  id                      Int     @id @default(autoincrement())
  titulo                  String  @unique
  anoDeLancamento         Int
  generos                 Genero[]
  atores                  Ator[]
}

model Genero {
  id                Int     @id @default(autoincrement())
  nome              String  @unique
  filmes            Filme[]
}